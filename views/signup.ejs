<%- include('partials/header') -%>


<div class="row justify-content-evenly py-5 my-5">

  <!-- Right side -->
  <div class="col-md-3 mt-3">
    <h3 class="text-center mb-5">Create an account</h3>

    <!-- Signup form -->
    <form method="post" action="/signup">
      <div class="mb-3">
        <label for="inputName">Full name</label>
        <input name="name" type="text" class="form-control" id="inputName" placeholder="John Cena">
      </div>
      <div class="mb-3">
        <label for="inputEmail">Email</label>
        <input name="email" type="email" class="form-control" id="inputEmail" placeholder="Email@Example.com">
      </div>
      <div class="mb-3">
        <label for="inputPassword">Password</label>
        <input name="password" type="password" class="form-control" id="inputPassword" placeholder="Password">
      </div>
      <%
        if (typeof pageError !== 'undefined') { %>
                <center>
                  <div class="badge mb-3 bg-danger text-wrap"><%=pageError%></div>
                </center>
      <%  }
      %>
      <div class="mb-3">
        <div class="d-grid gap-2 col-6 mx-auto">
          <button class="btn btn-primary" type="submit">Get started!</button>
        </div>
      </div>
    </form>
  </div>
  <!-- End of right side -->

</div>

<%- include('partials/footer') -%>
